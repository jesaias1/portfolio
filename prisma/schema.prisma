// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id          String   @id @default(uuid())
  title       String
  description String
  longDesc    String?
  image       String
  tags        String // JSON array as string
  link        String?
  github      String?
  featured    Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model About {
  id        String   @id @default(uuid())
  title     String
  content   String
  image     String?
  skills    String // JSON array as string
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BlogPost {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
  excerpt   String
  content   String
  image     String?
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Contact {
  id        String   @id @default(uuid())
  email     String
  github    String?
  linkedin  String?
  twitter   String?
  resume    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
